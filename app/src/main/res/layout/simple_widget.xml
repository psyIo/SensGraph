<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#55000000">

    <RelativeLayout
        android:id="@+id/widget_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/sensorValueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sensorNameTextView"
            android:layout_weight="1"
            android:gravity="left"
            android:text="000"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensorUpdatedDtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/sensorValueTextView"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/updateLogList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:layout_below="@+id/sensorUpdatedDtTextView"
            android:layout_alignParentStart="true" />


        <!--<Button-->
        <!--android:id="@+id/actionButton"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:text="@string/settings_short"/>-->

    </RelativeLayout>
</FrameLayout>