<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:padding="@dimen/widget_margin">


    <RelativeLayout
        android:id="@+id/widget_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="" />

        <TextView
            android:id="@+id/sensorValueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sensorNameTextView"
            android:gravity="start"
            android:text=""
            android:textSize="@dimen/text_22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sensorUpdatedDtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/sensorValueTextView"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>