<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_relative_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/graphImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name"/>

    <TextView
            android:id="@+id/sensorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.65"
            android:text="" />

    <TextView
        android:id="@+id/sensorValueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sensorNameTextView"
        android:gravity="start"
        android:text=""
        android:alpha="0.65"
        android:textSize="@dimen/text_22sp"
        android:layout_marginTop="-5dp"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sensorUpdatedDtTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:alpha="0.65"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetDebugList"
        android:layout_alignParentStart="true"
        android:divider="@color/blue"
        android:dividerHeight="1px"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:layout_below="@+id/sensorValueTextView"
        android:layout_above="@+id/sensorUpdatedDtTextView">
    </ListView>

    </RelativeLayout>

